<%- include ("partials/header.ejs") %>

<div class="container">
    <h2 style="color:#800020">Customer Reviews</h2>
  
    <div class="review">
      <div class="reviewer">Josh</div>
      <div class="rating">⭐⭐⭐⭐⭐</div>
      <div class="comment">
        "Excellent selection of wines. I love the variety and quality!"
      </div>
    </div>
  
    <div class="review">
      <div class="reviewer">Jane Smith</div>
      <div class="rating">⭐⭐⭐⭐</div>
      <div class="comment">
        "Great prices and wonderful staff. Will definitely recommend."
      </div>
    </div>
  
    <div class="user-review-form">
      <h3>Leave Your Review</h3>
      <form action="/submit-review" method="POST">
        <label for="name">Your Name:</label><br>
        <input type="text" id="name" name="name" required><br>
        <label for="rating">Rating:</label><br>
        <select id="rating" name="rating" required>
          <option value="⭐">⭐</option>
          <option value="⭐⭐">⭐⭐</option>
          <option value="⭐⭐⭐">⭐⭐⭐</option>
          <option value="⭐⭐⭐⭐">⭐⭐⭐⭐</option>
          <option value="⭐⭐⭐⭐⭐">⭐⭐⭐⭐⭐</option>
        </select><br>
        <label for="comment">Your Comment:</label><br>
        <textarea id="comment" name="comment" rows="4" required></textarea><br>
        <button type="submit">Submit</button>
      </form>
    </div>
</div>

